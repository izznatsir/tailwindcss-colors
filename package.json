{
	"name": "tailwindcss-color-variables",
	"version": "0.1.0",
	"description": "CSS color variables that are compatible with Tailwind CSS color opacity syntax.",
	"exports": {
		".": {
			"types": "./dist/tailwind.d.ts",
			"import": "./dist/tailwind.js"
		},
		"./radix": {
			"types": "./dist/radix.d.ts",
			"import": "./dist/radix.js"
		},
		"./css/*.css": {
			"import": "./dist/*.css"
		}
	},
	"files": [
		"dist"
	],
	"type": "module",
	"scripts": {
		"build": "tsx ./scripts/generate.ts",
		"format": "prettier -uw .",
		"prepare": "husky install"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@radix-ui/colors": "^3.0.0",
		"@types/node": "^20.11.0",
		"colortranslator": "^4.1.0",
		"husky": "^8.0.0",
		"lint-staged": "^15.2.0",
		"prettier": "^3.2.1",
		"tailwindcss": "^3.4.1",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	},
	"lint-staged": {
		"*": [
			"prettier -uw"
		]
	}
}
